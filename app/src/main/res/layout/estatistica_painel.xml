<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/azul_escuro"
    android:id="@+id/cv_areas_item"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    >
    <TextView
    android:id="@+id/tv_area_painel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:text="Filmes"
    android:textColor="@color/white"
    android:textSize="18sp"    />

    <TextView
    android:id="@+id/tv_acertos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="35dp"
    android:textColor="@color/white"
    android:textSize="14sp"
    android:text="@string/acertos_painel" />

    <TextView
    android:id="@+id/tv_tempo_painel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/tempo_painel"
    android:textColor="@color/white"
    android:textSize="14sp"
    android:layout_margin="20dp"
    android:layout_gravity="end"/>

</androidx.cardview.widget.CardView>
