<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TirarFoto">


    <ImageView
        android:id="@+id/imageView"
        android:layout_marginStart="61dp"
        android:layout_marginTop="57dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="68pt"
        android:layout_height="68pt"
        tools:src="@tools:sample/avatars"
        android:src="@drawable/perfil_padrao"
        android:scaleType="centerCrop"
        android:contentDescription="@string/foto_de_perfil_do_usuario"/>

    <Button
        android:id="@+id/btn_tirar_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="127dp"
        android:text="Capturar foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_salvarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="91dp"
        android:text="salvarFoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_tirar_foto" />


</androidx.constraintlayout.widget.ConstraintLayout>