<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_escuro"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".telas.QuizFragment"

    >

    <TextView
        android:id="@+id/tv_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:fontFamily="@font/montserrat_semibold"
        android:padding="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit.Integer vulputate augue ac turpis dignissim fringilla. "
        android:textColor="@color/white"
        android:textSize="17sp" />


    <RadioGroup
        android:id="@+id/rg_alternativas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:padding="20dp">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rb_style"
            android:focusable="auto"
            android:fontFamily="@font/montserrat_regular"
            android:padding="25dp"
            android:text="Lorem ipsum dolor"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rb_style"
            android:focusable="auto"
            android:fontFamily="@font/montserrat_regular"
            android:padding="25dp"
            android:text="Lorem ipsum dolor"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rb_style"
            android:focusable="auto"
            android:fontFamily="@font/montserrat_regular"
            android:padding="25dp"
            android:text="Lorem ipsum dolor"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rb_style"
            android:cursorVisible="false"
            android:fontFamily="@font/montserrat_regular"
            android:padding="25dp"
            android:text="Lorem ipsum dolor"
            android:textColor="@color/white"
            android:textSize="17sp" />


    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/azul"
        android:fontFamily="@font/montserrat_regular"
        android:paddingHorizontal="57dp"
        android:paddingVertical="15dp"
        android:text="@string/proxima"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="12dp" />


</LinearLayout>