<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telas.PainelFragment"
    android:background="@color/azul_escuro">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPainel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="-1dp"
        tools:listitem="@layout/estatistica_painel"
        />

    <TextView
        android:id="@+id/tv_ainda_nao_jogou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voce_ainda_nao_jogou"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>